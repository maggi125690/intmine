<!DOCTYPE html>
<html lang="en">
    <head>
        <!-- Required meta tags -->
        <meta charset="utf-8">
        <meta name="viewport" content="width=device-width, initial-scale=1">
        <link href="https://fonts.googleapis.com/css?family=Lora:400,700|Montserrat:300" rel="stylesheet">

        <!-- Bootstrap css link -->
        <link rel="stylesheet" href="../node/bootstrap/dist/css/bootstrap.css">
        <link href="https://fonts.googleapis.com/icon?family=Material+Icons+Outlined" rel="stylesheet">
        <!-- Main css link -->
        <link rel="stylesheet" href="../public/css/style.css">

        <title>InterestMiners</title>
    </head>
    <body>
        <!-- Nav-bar -->
        <%- include('partial/header') %>
        


        <div class="container-fluid general-head-section">
            <div class="container">
                <div class="row sign-up-pad d-flex justify-content-center">
    
                    <!-- Welcome container -->
                    <div class="col-sm-12 col-md-5 col-lg-4 sign-pad">
                        <div class="welcome-container">
                            <p class="section-large-txt inv-light">Hello Friend!</p>
                            <p class="normal-txt inv-light">
                                To get access to your dashboard, please sign up with your required details.
                            </p>
                            <p class="normal-txt inv-light">
                                Contact us at InterestMiners@gmail.com for more informations.
                            </p>
                            <a href="/users/login" class="sign-btn">Sign In</a>
                        </div>
                    </div>
                    
                    
                    <!-- Sign container -->
                    <div class="col-sm-12 col-md-6 col-lg-4 sign-pad">
                        <div class="sign-container">
                            <p class="section-large-txt">Create Account</p>
                            <!-- <div class="icon-container">
                                <div class="icon-wrap"><img src="../public/Image/sign/facebook-logo.png" alt="" srcset="" class="img-fluid"></div>
                                <div class="icon-wrap"><img src="../public/Image/sign/google-letter-logo.png" alt="" srcset="" class="img-fluid"></div>
                                <div class="icon-wrap"><img src="../public/Image/sign/twitter.png" alt="" srcset="" class="img-fluid"></div>
                            </div> -->
                            <p class="sign-txt normal-txt">Use an E-mail account to create an account with us</p>
    
                            
                            <!-- Error messages -->
                            <%- include('partial/messages') %>

                            <!-- Input form section -->
                            <form action="/users/register" method="POST">
                                <div class="form-group">
                                    <div class="input-icon-wrap"><img src="../public/Image/sign/account.png" alt="" srcset="" class="img-fluid"></div>
                                    <input type="name" id="name" name="name" class="form-control form-input" placeholder="Enter Name" value="<%= typeof name != 'undefined' ? name : '' %>" required>
                                </div>
                                <div class="form-group">
                                    <div class="input-icon-wrap"><img src="../public/Image/sign/email.png" alt="" srcset="" class="img-fluid"></div>
                                    <input type="email" id="email" name="email" class="form-control form-input" placeholder="Enter Email" value="<%= typeof email != 'undefined' ? email : '' %>" required>
                                </div>
                                <div class="form-group">
                                    <div class="input-icon-wrap input-wrap-shift"><img src="../public/Image/sign/lock.png" alt="" srcset="" class="img-fluid"></div>
                                    <div style="display: flex;flex-direction: row;">
                                        <input type="password" id="pass" name="password" class="form-control form-input" placeholder="Enter Password" value="<%= typeof password != 'undefined' ? password : '' %>" required>
                                        <span id="visiblity-toggle" class="material-icons-outlined">visibility</span>
                                    </div>
                                <div class="form-group">
                                    <div class="input-icon-wrap input-wrap-shift"><img src="../public/Image/sign/lock.png" alt="" srcset="" class="img-fluid"></div>
                                    <div style="display: flex;flex-direction: row;">
                                        <input type="password" id="password2" name="password2" class="form-control form-input" placeholder="Confirm Password" value="<%= typeof password2 != 'undefined' ? password2 : '' %>" required>
                                        <span id="con-visiblity-toggle" class="material-icons-outlined">visibility</span>
                                    </div>
                                </div>
                                <!-- <div class="forgot-wrap"><a href="#" class="forgot-link">Forgot Password?</a></div> -->
                                <button type="submit" onclick="document.location.href='/dashboard/'" class="btn btn-wrap1">Sign Up</button>
                            </form>
                        </div>
                    </div>
                </div>


                

                <div class="col-12 normal-txt" style="margin: 5em 0 3em 0;text-align: center;">Â© InterestMiners 2019-2022. All rights reserved.</div>

            </div>
        </div>



    </body>

    <!-- Optional JavaScript; choose one of the two! -->
    <script src="../public/javascript/script.js"></script>

    <!-- Option 1: Bootstrap Bundle with JQuery -->
    <script src="../public/javascript/jquery.js"></script>
    <script src="../node/bootstrap/dist/js/bootstrap.js"></script>


    <script>
        const pass = document.querySelector('#pass')
        const btn = document.querySelector('#visiblity-toggle')

        btn.addEventListener('click', () => {
            if (pass.type === "text") {
                pass.type = "password";
                btn.innerHTML = "visibility";
            } else {
                pass.type = "text";
                btn.innerHTML = "visibility_off";

            }
        })


        const conpass = document.querySelector('#password2')
